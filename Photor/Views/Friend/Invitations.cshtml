@using Photor.Core.Models.Friend
@model IEnumerable<FriendInvitationViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@foreach (var friendInvitation in Model) {
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@friendInvitation.Sender.UserName</h5>
                <a asp-action="AcceptFriendInvitation" asp-controller="Friend" asp-route-senderId="@friendInvitation.Sender.Id" class="card-link">Accept Invitation</a>
                <a asp-action="RejectFriendInvitation" asp-controller="Friend" asp-route-senderId="@friendInvitation.Sender.Id" class="card-link">Reject Invitation</a>
            </div>
        </div>
    }
