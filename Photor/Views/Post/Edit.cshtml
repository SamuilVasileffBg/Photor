@using Photor.Core.Models.Post
@model EditPostViewModel

@{
    ViewData["Title"] = "Edit Post";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="editPost" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id"></input>
            <input type="hidden" asp-for="@Model.UserId"></input>
            <div class="text-center mb-3">
                <label asp-for="@Model.Description">Description</label>
                <input class="form-control" aria-required="true" asp-for="@Model.Description" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="@Model.FriendsOnly" class="form-check-input" type="checkbox" id="friendsOnlyCheck">
                <label class="form-check-label" for="friendsOnlyCheck">
                  Only my friends can see this post
                </label>
            </div>
            <div class="text-center">
                <button id="addPostSubmit" type="submit" class="btn btn-primary">Edit Post</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}