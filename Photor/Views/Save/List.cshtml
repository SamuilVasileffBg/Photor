@using Photor.Core.Models.Post
@model PostsPaginationViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.CardButton = "Unsave";
    ViewBag.Action = "List";
    ViewBag.Controller = "Save";
    ViewBag.NoDataText = "No saved posts";
}

<div class="text-center">
    <img style="width:10%;" referrerpolicy="no-referrer" class="rounded-circle" src="@ViewBag.User.ImageUrl"></img>
    <h1><a asp-action="Account" asp-controller="User" asp-route-id="@Model.UserId">@ViewBag.User.UserName</a>'s saved posts</h1>
</div>

<partial name="_PostPaginationPartial" model="@Model"/>