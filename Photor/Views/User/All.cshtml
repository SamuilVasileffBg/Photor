@using Photor.Core.Models.User
@using Photor.Extensions
@model List<UserViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@foreach (var user in Model)
{
    <div class="card" style="width: 18rem;">
            <div class="card-body">
                <a asp-action="Account" asp-controller="User" asp-route-id="@user.Id">
                    <h5 class="card-title">@user.UserName</h5>
                </a>
                @if (User.Id() == user.Id)
                {
                    <p>This is your account</p>
                }
                else if (await friendService.FindFriendInvitationAsync(User.Id(), user.Id) != null)
                {
                    @if ((await friendService.FindFriendInvitationAsync(User.Id(), user.Id)).SenderId == User.Id())
                    {
                        <a class="btn btn-primary" asp-action="DeleteFriendInvitation" asp-controller="Friend" asp-route-id="@user.Id" class="card-link">Delete friend invitation</a>
                    }
                    else
                    {
                        <div class="nav-item dropdown">
                            <div class="dropdown">
                                <button class="btn btn-primary" type="button"
                                data-bs-toggle="dropdown">Sent you a friend invitation &#128317;</button>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-action="AcceptFriendInvitation" asp-controller="Friend" asp-route-senderId="@user.Id" class="card-link">Accept Invitation</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-action="RejectFriendInvitation" asp-controller="Friend" asp-route-senderId="@user.Id" class="card-link">Reject Invitation</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                }
                else if (await friendService.FindUserFriendAsync(User.Id(), user.Id) == null)
                {
                    <form>
                        <a class="btn btn-primary" asp-action="SendFriendInvitation" asp-controller="Friend" asp-route-receiverId="@user.Id" class="card-link">Send friend invitation</a>
                    </form>
                }
                else
                {
                    <a class="btn btn-primary" asp-action="DeleteFriendship" asp-controller="Friend" asp-route-id="@user.Id" class="card-link">Delete friend</a>
                }
            </div>
        </div>
}