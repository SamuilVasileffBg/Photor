@using Photor.Extensions
@model List<UserViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@foreach (var user in Model)
{
    <div class="card" style="width: 18rem;">
            <div class="card-body">
                <a asp-action="Account" asp-controller="User" asp-route-id="@user.Id">
                    <h5 class="card-title">@user.UserName</h5>
                </a>
                @if (User.Id() == user.Id)
                {
                    <p>This is your account</p>
                }
                else if (await friendService.FindFriendInvitationAsync(User.Id(), user.Id) != null)
                {
                    @if ((await friendService.FindFriendInvitationAsync(User.Id(), user.Id)).SenderId == User.Id())
                    {
                        <a asp-action="DeleteFriendInvitation" asp-controller="Friend" asp-route-id="@user.Id" class="card-link">Delete friend invitation</a>
                    }
                    else
                    {
                        <a asp-action="AcceptFriendInvitation" asp-controller="Friend" asp-route-senderId="@user.Id" class="card-link">Accept Invitation</a>
                        <a asp-action="RejectFriendInvitation" asp-controller="Friend" asp-route-senderId="@user.Id" class="card-link">Reject Invitation</a>
                    }
                }
                else if (await friendService.FindUserFriendAsync(User.Id(), user.Id) == null)
                {
                    <button class="btn btn-primary" asp-action="SendFriendInvitation" asp-controller="Friend" asp-route-receiverId="@user.Id" class="card-link">Send friend invitation</button>
                }
                else
                {
                    <a asp-action="DeleteFriendship" asp-controller="Friend" asp-route-id="@user.Id" class="card-link">Delete friend</a>
                }
            </div>
        </div>
}